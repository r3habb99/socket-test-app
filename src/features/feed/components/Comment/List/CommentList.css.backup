.comment-list {
  margin-top: 16px;
}

.nested-comment-list {
  margin-left: 40px;
  margin-top: 4px;
  border-left: 2px solid #eee;
  padding-left: 16px;
  background-color: #f9f9f9;
  border-radius: 0 8px 8px 0;
}

.comment-list .ant-list-item {
  padding: 12px 0;
  border-bottom: 1px solid #eee;
}

.comment-list .ant-list-item:last-child {
  border-bottom: none;
}

.comment-list .ant-empty {
  margin: 24px 0;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .comment-list {
    margin-top: 12px;
  }

  .nested-comment-list {
    margin-left: 24px;
    padding-left: 8px;
    border-radius: 0 6px 6px 0;
  }

  .comment-list .ant-list-item {
    padding: 10px 0;
  }

  .comment-list .ant-empty {
    margin: 16px 0;
  }

  .comment-list .ant-empty-image {
    height: 40px;
  }

  .comment-list .ant-empty-description {
    font-size: 14px;
  }
}
